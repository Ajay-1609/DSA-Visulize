pipeline {
  agent {
    kubernetes {
      yaml """
apiVersion: v1
kind: Pod
spec:
  containers:
    - name: node
      image: node:18
      command:
        - cat
      tty: true
    - name: docker
      image: docker:dind
      securityContext:
        privileged: true
      command:
        - dockerd-entrypoint.sh
      tty: true
"""
    }
  }

  environment {
    SONARQUBE = 'IMCC-Sonar'
    DOCKER_IMAGE = "my-react-app:${env.BUILD_NUMBER}"
  }

  stages {

    stage('Checkout') {
      steps {
        checkout scm
      }
    }

    stage('Install & Build') {
      steps {
        container('node') {
          dir('client') {
            sh 'npm install'
            sh 'npm run build'
          }
        }
      }
    }

    stage('SonarQube Analysis') {
      steps {
        container('node') {
          withSonarQubeEnv("${SONARQUBE}") {
            sh """
              sonar-scanner \
                -Dsonar.projectKey=dsa-client \
                -Dsonar.sources=client/src \
                -Dsonar.host.url=http://sonarqube.imcc.com \
                -Dsonar.login=${SONAR_TOKEN}
            """
          }
        }
      }
    }

    stage('Docker Build & Push') {
      steps {
        container('docker') {
          dir('client') {
            sh "docker build -t ${DOCKER_IMAGE} ."
          }
        }
      }
    }
  }

  post {
    always {
      cleanWs()
    }
  }
}